generator client {
  provider = "prisma-client"
  output   = "../src/lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Property {
  id           String         @id @default(uuid())
  title        String
  slug         String         @unique
  description  String?
  price        Int
  location     String
  images       String[]
  type         PropertyType
  listingType  ListingType    @default(SALE)
  status       PropertyStatus @default(available)
  beds         Int?
  baths        Int?
  sqft         Int?
  isFeatured   Boolean        @default(false)
  garage       Boolean        @default(false)
  swimmingPool Boolean        @default(false)
  balcony      Boolean        @default(false)
  garden       Boolean        @default(false)
  leads        Lead[]
  createdAt    DateTime       @default(now())
}

model Lead {
  id         String     @id @default(uuid())
  name       String
  email      String?
  phone      String?
  subject    String?
  message    String?
  status     LeadStatus @default(new)
  propertyId String?
  property   Property?  @relation(fields: [propertyId], references: [id])
  createdAt  DateTime   @default(now())
}

model Admin {
  id       String    @id @default(uuid())
  email    String    @unique
  password String
  name     String?
  role     AdminRole @default(ADMIN)
}

enum AdminRole {
  SUPER_ADMIN
  ADMIN
}

enum PropertyType {
  House
  Apartment
  Plot
}

enum PropertyStatus {
  available
  sold
}

enum ListingType {
  SALE
  RENT
}

enum LeadStatus {
  new
  contact
  sold
}

model Newsletter {
  id        String   @id @default(uuid())
  email     String   @unique
  createdAt DateTime @default(now())
}
